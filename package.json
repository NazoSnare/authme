{
	"name": "authme",
	"description": "A simple 2FA app for desktop built with Electron and Node.js.",
	"author": "Levminer",
	"version": "3.0.0",
	"license": "GPL-3.0",
	"scripts": {
		"dev": "npm run pack && npm run start",
		"watch": "concurrently 'npm:watcher' 'npm:electronmon'",
		"watcher": "webpack --config .webpackrc.js --watch",
		"pack": "webpack --config .webpackrc.js",
		"start": "electron .",
		"electronmon": "electronmon .",
		"build": "electron-builder"
	},
	"build": {
		"productName": "create-electron-react-app",
		"appId": "com.levminer.create-electron-react-app",
		"win": {
			"target": [
				"nsis"
			]
		}
	},
	"electronmon": {
		"patterns": [
			"!renderer/*",
			"!dist/*"
		]
	},
	"main": "./core/main.js",
	"dependencies": {
		"electron-util": "^0.14.2"
	},
	"devDependencies": {
		"@babel/core": "^7.12.13",
		"@babel/preset-env": "^7.12.13",
		"@babel/preset-react": "^7.12.13",
		"@levminer/speakeasy": "^1.0.7",
		"babel-loader": "^8.2.2",
		"concurrently": "^5.3.0",
		"css-loader": "^4.3.0",
		"electron": "^12.0.1",
		"electron-builder": "^22.9.1",
		"electronmon": "^1.1.2",
		"eslint": "^7.19.0",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-config-promise": "^2.0.2",
		"eslint-config-react": "^1.1.7",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-standard": "^5.0.0",
		"prettier": "^2.2.1",
		"react": "^16.14.0",
		"react-dom": "^16.14.0",
		"react-router-dom": "^5.2.0",
		"sass": "^1.32.6",
		"sass-loader": "^10.1.1",
		"style-loader": "^1.3.0",
		"webpack": "^5.21.1",
		"webpack-cli": "^4.5.0"
	}
}
